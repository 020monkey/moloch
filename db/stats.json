{
  "index" : {
    "store" : {
      "type" : "memory"
    }
  },
  "settings" : {
    "number_of_shards"     : 1,           
    "auto_expand_replicas" : "0-all"  
  },
  "mappings": {
    "stat": {
      "_all" : {"enabled" : false},
      "_source" : {"enabled" : true},
      "properties": {
        "hostname": {
          "type": "string",
          "index": "not_analyzed"
        },
        "currentTime": {
          "type": "long"
        },
        "freeSpaceM": {
          "type": "long",
          "index": "no"
        },
        "totalK": {
          "type": "long",
          "index": "no"
        },
        "totalPackets": {
          "type": "long",
          "index": "no"
        },
        "totalSessions": {
          "type": "long",
          "index": "no"
        },
        "totalDropped": {
          "type": "long",
          "index": "no"
        },
        "deltaMS": {
          "type": "long",
          "index": "no"
        },
        "deltaBytes": {
          "type": "long",
          "index": "no"
        },
        "deltaPackets": {
          "type": "long",
          "index": "no"
        },
        "deltaSessions": {
          "type": "long",
          "index": "no"
        },
        "deltaDropped": {
          "type": "long",
          "index": "no"
        }
      }
    }
  }
}
