CC            = @CC@

INCLUDE_OTHER = -I../.. -I../../thirdparty \
                @GLIB2_CFLAGS@

install_sh = @install_sh@
mkdir_p = @mkdir_p@
INSTALL = @INSTALL@
PLUGINDIR = @prefix@/plugins
INCLUDE_LUA = -I/opt/local/include
LIB_LUA=/opt/local/lib/liblua.a

SRCS=$(wildcard *.c)
SOS=$(patsubst %.c,../%.so,$(SRCS))

../%.so : %.c ../../moloch.h ../../hash.h ../../dll.h
	$(CC) @SHARED_FLAGS@ -o $@ -O2 -ggdb -Wall -Wextra -D_GNU_SOURCE -fPIC $(INCLUDE_OTHER) $(INCLUDE_LUA) $(LIB_LUA) $<

all:$(SOS)

distclean realclean clean:
	rm -f *.o *.so
