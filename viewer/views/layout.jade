!!! 5
html
  head
    title Moloch - #{title}
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
    script(src='/DataTables-1.9.1/media/js/jquery.dataTables.min.js')
    script(src='/flot-0.7/jquery.flot.min.js')
    script(src='/flot-0.7/jquery.flot.selection.min.js')
    script(src='/flot-0.7/jquery.flot.resize.min.js')
    script(src='/flot-0.7/jquery.flot.navigate.min.js')
    script(src='/common.js')

    link(rel='stylesheet', type='text/css', href='/DataTables-1.9.1/media/css/demo_table.css')
    link(rel='stylesheet', type='text/css', href='https://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/smoothness/jquery-ui.css')
    link(rel='stylesheet', type='text/css', href='/style.css')
  body
    #header
      div#logo
        a(href='/about')
          img(src='header_logo.png', style="border-style:none")
      div#nav
        ul.ulist-nav
          li
            a(href='/') Sessions
          li
            a(href='/files') Files
          if user.createEnabled
            li
              a(href='/users') Users
          li
            a(href='/stats') Stats
          li.last
            a.config(href='/password') Change Password
      div#version 
        p moloch v#{molochversion}
      - if (isIndex)
        form#searchForm
          div#searchStuff
            select(id='date')
              option(value=1,selected) Last 1 hr
              option(value=6) Last 6 hrs
              option(value=24) Last 24 hrs 
              option(value=48) Last 48 hrs 
              option(value=72) Last 3 days
              option(value=168) Last Week
              option(value=-1) All
              option(value=-2) Graph
            input#expression(type='text', name='expression')
            button#search(type="submit") Search
            button#export(type="button") Export
        
    #pageBody
      != body
