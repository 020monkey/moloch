// SESSIONS
.dataTables_length
  padding-top: 4px
  width: 10%

.dataTables_info
  font-size: 14px
  padding-top: 6px
  width: auto

.dataTables_paginate
  padding-top: 4px
  padding-bottom: 2px

.paging_full_numbers
  font-size: 14px

.paging_full_numbers a.paginate_button, .paging_full_numbers a.paginate_button:hover
  text-shadow: none
  background-color: #C7CAE2

.paginate_disabled_previous, .paginate_enabled_previous
  background-color: none

.paginate_disabled_next, .paginate_enabled_next
  background-color: none

.paginate_enabled_next, .paginate_enabled_previous
  color: white !important

.paging_full_numbers a.paginate_active 
  text-shadow: none
  background-color: white


