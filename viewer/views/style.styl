// layout.jade
#header
  font-family: "Lucida Grande", "Lucida Sans Unicode", Arial, sans-serif
  margin-bottom:10px
  line-height: 0px
  text-shadow: black 0.1em 0.1em 0.2em
  color:white
  height: 70px
  position: relative
  background: #16285a /* Old browsers */
  background: -moz-linear-gradient(top,  #16285a 0%, #435b99 100%) /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#16285a), color-stop(100%,#435b99)) /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  #16285a 0%,#435b99 100%) /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  #16285a 0%,#435b99 100%) /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  #16285a 0%,#435b99 100%) /* IE10+ */
  background: linear-gradient(to bottom,  #16285a 0%,#435b99 100%) /* W3C */
  //filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#16285a',endColorstr='#435b99',GradientType=0 ) /* IE6-9 */

